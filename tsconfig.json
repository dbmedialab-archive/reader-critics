{
	"include": [
		"./src/**/*"
	],
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": "src",
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"outDir": "app",
		"paths": {
			"/*": [ "./*" ],
			"~/*": [ "./*" ]
		},
		"preserveConstEnums": true,
		"pretty": true,
		"removeComments": true,
		"sourceMap": false,
		"target": "es6",
		"types" : [
			"bluebird",
			"core-js",
			"express",
			"lodash",
			"node"
		]
	}
}
