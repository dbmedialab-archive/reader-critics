{
	"include": [
		"./src-app/**/*"
	],
	"exclude": [
		"./node_modules"
	],
	"compilerOptions": {
		"outDir": "out/app",

		"baseUrl": ".",
		"paths": {
			"app/*": [ "src-app/*" ]
		},

		"allowJs": false,
		"declaration": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": false,
		"suppressImplicitAnyIndexErrors": true,
		"target": "es6"
	}
}
