{
	"extends": [
		"airbnb"
	],
	"parser": "babel-eslint",
	"parserOptions": { "ecmaVersion": 6 },
	"settings": {
		"ecmascript": 6,
		"jsx": false
	},
	"env": {
		"browser": false,
		"mocha": true,
		"node": true
	},
	"globals": {
		"globals": true,
		"assert": true,
		"before": true
	},
	"rules": {
		"brace-style": [ "error", "stroustrup" ],
		"indent": [ "error", "tab" ],
		"no-tabs": 0,
		"no-unused-vars": [ "warn", {
			"vars": "local",
			"args": "none"
		}]
	}
}
