{
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"./src/frontend"
	],
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": "src",
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"outDir": "app",
		"paths": {
			"/*": [ "./*" ],
			"~/*": [ "./*" ]
		},
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": false,
		"suppressImplicitAnyIndexErrors": true,
		"target": "es6"
	}
}
