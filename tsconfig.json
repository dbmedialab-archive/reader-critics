{
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"./node_modules",
		"./src-arch"
	],
	"compilerOptions": {
		"outDir": "out",

		"baseUrl": "./src",
		"paths": {
			"admin/*": [ "admin/*"],
			"app/*": [ "app/*" ],
			"base/*": [ "base/*" ],
			"front/*": [ "front/*" ]
		},

		"allowJs": false,
		"declaration": true,
		"experimentalDecorators": true,
		"lib": [
			"DOM",
			"ES2017"
		],
		"jsx": "react",
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"suppressImplicitAnyIndexErrors": true,
		"target": "es6"
	}
}
